{
    "name": "zicht/page-bundle",
    "description": "Zicht PageBundle",
    "type": "symfony-bundle",
    "authors": [
        {
            "name": "Gerard van Helden",
            "email": "gerard@zicht.nl"
        }
    ],
    "require": {
        "php": ">=5.3",
        "zicht/util": "*"
    },
    "require-dev": {
        "symfony/symfony": "*",
        "doctrine/orm": ">=2.2.3,<2.4-dev",
        "doctrine/doctrine-bundle": "1.0.*",
        "zicht/admin-bundle": "*",
        "zicht/url-bundle": ">=1.6",
        "sonata-project/admin-bundle": "*",
        "jms/metadata": "*"
    },
    "suggest": {
        "zicht/url-bundle": "Handle URL aliasing and url generation for pages",
        "zicht/admin-bundle": "Add the Zicht admin menu to pages when logged in"
    },
    "autoload": {
        "psr-0": { "": ["src/", "tests/"] }
    },
    "minimum-stability": "dev"
}
