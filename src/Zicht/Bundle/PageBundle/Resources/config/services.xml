<?xml version="1.0"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="zicht_page.page_aliasing_strategy.class">Zicht\Bundle\UrlBundle\Aliasing\DefaultAliasingStrategy</parameter>
    </parameters>

    <services>
        <service id="zicht_page.page_url_provider" class="Zicht\Bundle\PageBundle\Url\PageUrlProvider">
            <argument type="service" id="router"/>
            <argument type="service" id="zicht_page.page_manager"/>
            <tag name="zicht_url.url_provider"/>
        </service>

        <service id="zicht_page.page_aliaser" class="Zicht\Bundle\UrlBundle\Aliasing\Aliaser">
            <argument type="service" id="zicht_url.aliasing"/>
            <argument type="service" id="zicht_page.page_url_provider"/>
            <argument type="service" id="zicht_page.page_aliasing_strategy"/>
        </service>

        <service id="zicht_page.page_aliasing_strategy" class="%zicht_page.page_aliasing_strategy.class%" />

        <service id="zicht_page.page_manager" class="Zicht\Bundle\PageBundle\Manager\PageManager">
            <argument type="service" id="doctrine"/>
            <argument type="service" id="event_dispatcher"/>
            <argument/>
            <argument/>
        </service>

        <service id="zicht_page.page_manager_subscriber" class="Zicht\Bundle\PageBundle\Manager\Doctrine\Subscriber">
            <argument type="service" id="service_container"/>
            <tag name="doctrine.event_subscriber"/>
        </service>
        <service id="zicht_page.form.type.zicht_content_item_type_type"
                 class="Zicht\Bundle\PageBundle\Type\ContentItemTypeType">
            <argument type="service" id="sonata.admin.pool"/>
            <argument/>
            <tag name="form.type" alias="zicht_content_item_type"/>
        </service>
        <service id="zicht_page.form.type.zicht_content_item_region_type"
                 class="Zicht\Bundle\PageBundle\Type\ContentItemRegionType">
            <argument/>
            <argument/>
            <tag name="form.type" alias="zicht_content_item_region"/>
        </service>
        <service id="main.form.type.zicht_discriminator_map_type"
                 class="Zicht\Bundle\PageBundle\Type\DiscriminatorMapType">
            <argument type="service" id="doctrine"/>
            <tag name="form.type" alias="zicht_discriminator_map"/>
        </service>
        <service id="zicht_page.admin.event_propagation_builder"
                 class="Zicht\Bundle\PageBundle\AdminMenu\EventPropagationBuilder">
            <argument type="service" id="sonata.admin.pool"/>
            <tag name="zicht_admin.event_propagation" event="zicht_page.view"/>
        </service>
    </services>
</container>
