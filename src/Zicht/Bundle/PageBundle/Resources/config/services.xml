<?xml version="1.0"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="zicht_page.page_url_provider.class">Zicht\Bundle\PageBundle\Url\PageUrlProvider</parameter>
        <parameter key="zicht_page.admin.event_propagation_builder.class">Zicht\Bundle\PageBundle\AdminMenu\EventPropagationBuilder</parameter>
    </parameters>
    <services>
        <service id="zicht_page.page_url_provider" class="%zicht_page.page_url_provider.class%">
            <argument type="service" id="router"/>
            <argument type="service" id="zicht_page.page_manager"/>
            <tag name="zicht_url.url_provider"/>
        </service>

        <service id="zicht_page.page_manager_subscriber" class="Zicht\Bundle\PageBundle\Manager\Doctrine\Subscriber">
            <argument type="service" id="service_container"/>
            <tag name="doctrine.event_subscriber"/>
        </service>

        <service id="zicht_page.form.type.zicht_content_item_type_type" class="Zicht\Bundle\PageBundle\Type\ContentItemTypeType">
            <argument type="service" id="sonata.admin.pool"/>
            <argument/>
            <tag name="form.type" alias="zicht_content_item_type"/>
        </service>

        <service id="zicht_page.form.type.zicht_content_item_region_type" class="Zicht\Bundle\PageBundle\Type\ContentItemRegionType">
            <argument/>
            <argument/>
            <argument type="service" id="translator" />
            <tag name="form.type" alias="zicht_content_item_region"/>
        </service>

        <service id="main.form.type.zicht_discriminator_map_type" class="Zicht\Bundle\PageBundle\Type\DiscriminatorMapType">
            <argument type="service" id="doctrine"/>
            <tag name="form.type" alias="zicht_discriminator_map"/>
        </service>

        <service id="zicht_page.admin.event_propagation_builder" class="%zicht_page.admin.event_propagation_builder.class%">
            <argument type="service" id="sonata.admin.pool"/>
            <argument type="service" id="zicht_url.provider"/>
            <tag name="zicht_admin.event_propagation" event="zicht_page.view"/>
        </service>

        <service id="zicht_page.page_manager" class="Zicht\Bundle\PageBundle\Manager\PageManager">
            <argument type="service" id="doctrine"/>
            <argument type="service" id="event_dispatcher"/>
            <argument/>
            <argument/>
        </service>

        <service id="zicht_page.security.authorization.voter.page_voter"
                 class="Zicht\Bundle\PageBundle\Security\Voter\PageVoter"
                 public="false">
            <tag name="security.voter" />
        </service>

        <service id="zicht_page.security.authorization.voter.scheduled_content_voter"
                 class="Zicht\Bundle\PageBundle\Security\Voter\ScheduledContentVoter"
                 public="false">
            <tag name="security.voter" />
        </service>

        <service id="zicht_page.validator.content_item_matrix_validator" class="Zicht\Bundle\PageBundle\Validator\Constraints\ContentItemMatrixValidator">
            <tag name="validator.constraint_validator" alias="zicht_page.validator.content_item_matrix_validator" />
            <argument type="service" id="translator"/>
        </service>
    </services>
</container>
